@model Models.LineItem

@{
    ViewData["Title"] = "EditItem";
}

<h4>Edit the Product quantity</h4>

<h6>@Model.ProductName</h6>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditItem">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="OrderId" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="ProductId" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="ProductName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Cost" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Cart">Back to Cart</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
